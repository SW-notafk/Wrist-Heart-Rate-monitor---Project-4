<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/menu_background"
    tools:context=".Menu">

    <!-- Main text -->

    <TextView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Button to move to the live heart rate monitor -->

    <!-- Button to move to the Heart rate graphs -->

    <!-- Button to move to the bluetooth application  -->

    <!-- Button to move to the strap information  -->

    <!-- Button to move to the database data  -->

    <Button
        android:id="@+id/live_heart_rate_button"
        android:layout_width="244dp"
        android:layout_height="78dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#4682b4"
        android:minWidth="200dp"
        android:text="Live heart rate data"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/heart_rate_graphs_button"
        android:layout_width="244dp"
        android:layout_height="78dp"
        android:layout_marginTop="148dp"
        android:backgroundTint="#4682b4"
        android:minWidth="200dp"
        android:text="Heart rate graphs"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/menu" />

    <Button
        android:id="@+id/bluetooth_settings_button"
        android:layout_width="244dp"
        android:layout_height="78dp"
        android:layout_marginTop="268dp"
        android:backgroundTint="#4682b4"
        android:minWidth="200dp"
        android:text="Bluetooth settings"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/menu" />

    <Button
        android:id="@+id/strap_information_button"
        android:layout_width="244dp"
        android:layout_height="78dp"
        android:layout_marginTop="388dp"
        android:backgroundTint="#4682b4"
        android:minWidth="200dp"
        android:text="Strap information"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/menu"
        app:layout_constraintVertical_bias="0.018" />

    <Button
        android:id="@+id/data_base_button"
        android:layout_width="244dp"
        android:layout_height="78dp"
        android:layout_marginTop="388dp"
        android:backgroundTint="#4682b4"
        android:minWidth="200dp"
        android:text="Database"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/menu"
        app:layout_constraintVertical_bias="0.811" />


</androidx.constraintlayout.widget.ConstraintLayout>